datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Event {
  id            Int      @id @default(autoincrement())
  title         String
  datetime      DateTime
  venue         String?
  description   String?
  source        String
  originalUrl   String   @unique
  status        String   @default("new")
  lastScrapedAt DateTime @default(now())

  city          String   @default("Sydney") 
}

model Lead {
  id       Int    @id @default(autoincrement())
  email    String
  consent  Boolean
  eventId  Int
}